<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletUsuari</servlet-name>
        <servlet-class>controladors.ServletUsuari</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletMovimentRobot</servlet-name>
        <servlet-class>controladors.ServletMovimentRobot</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletUsuari</servlet-name>
        <url-pattern>/ServletUsuari</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMovimentRobot</servlet-name>
        <url-pattern>/ServletMovimentRobot</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
